.main-chat
  .main-chat__group-info
    .main-chat__group-info__left-box
      .main-chat__group-info__left-box__current-group
        @group.name 
      .main-chat__group-info__left-box__member-list
        Member:
        @group.users.each do |user|
        user.name
    .main-chat__group-info__edit-btn
      =link_to "#"  do 
        Edit
      
  .messages
    render @messages

  .form
    %form.new-message
      .input-box
        %input{type: "text",class:"input-box__text",placeholder:"type a message"}
        %label{class: "input-box__image"}
          = icon('fas','image')
          %input{type:"file",class:"input-box__image__file"}
      %input{type: "submit",class:"submit-btn"}




      